<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Training Manager Group -->
        <record id="group_training_admin" model="res.groups">
            <field name="name">Student Training Admin</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>

    <data noupdate="0">
        <!-- Admin Rule - Can see all records -->
        <record id="training_session_admin_rule" model="ir.rule">
            <field name="name">Training Admin Access All Records</field>
            <field name="model_id" ref="model_student_training_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_training_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- User Rule - Can only see own records -->
        <record id="training_session_user_rule" model="ir.rule">
            <field name="name">Training Users See Only Own Records</field>
            <field name="model_id" ref="model_student_training_session"/>
            <field name="domain_force">[('trainer_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>

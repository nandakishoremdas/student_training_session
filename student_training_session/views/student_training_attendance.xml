<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_training_attendance_form" model="ir.ui.view">
        <field name="name">student.training.attendance.form</field>
        <field name="model">student.training.attendance</field>
        <field name="arch" type="xml">
            <form create="false" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="session_id"/>
                            <field name="student_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_training_attendance_list" model="ir.ui.view">
        <field name="name">student.training.attendance.list</field>
        <field name="model">student.training.attendance</field>
        <field name="arch" type="xml">
            <list create="false" delete="false">
                <field name="session_id"/>
                <field name="student_id"/>
                <field name="date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'present'"
                       decoration-danger="state == 'absent'"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_training_attendance" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">student.training.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'group_by': 'session_id'}</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_training_attendance"
              name="Attendances"
              parent="menu_training_root"
              action="action_training_attendance"
              sequence="2"/>
</odoo>